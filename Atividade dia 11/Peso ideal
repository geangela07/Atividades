sexo = input("Digite seu sexo F ou M:")
altura = input ("Digite sua altura:")

if (sexo == "F" ):
    pesoIdeal = (62.1 * altura) - 44.7
    print( "Seu peso ideal é",pesoIdeal)
elif (sexo == "M"):
    pesoIdeal = (72.7 * altura) - 58
    print("Seu peso ideal é",pesoIdeal)

else:
    print("Digite um sexo válido")
